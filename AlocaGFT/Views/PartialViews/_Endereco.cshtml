@model AlocaGFT.Models.Endereco

<input asp-for="id" value="@(Model==null? 0: Model.id)" type="hidden" class="form-control">

<div class="form-group">
    <label asp-for="cep"></label>
    <div class="input-group mb-3">
        <input asp-for="cep" class="form-control" mascara="cep" placeholder="99999-999">
        <div class="input-group-append">
            <button id="btnCep" class="btn btn-outline-secondary" type="button">Procurar</button>
        </div>
    </div>
    <span asp-validation-for="cep" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="uf"></label>
    <input readonly asp-for="uf" class="form-control">
    <span asp-validation-for="uf" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="cidade"></label>
    <input readonly asp-for="cidade" class="form-control">
    <span asp-validation-for="cidade" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="bairro"></label>
    <input readonly asp-for="bairro" class="form-control">
    <span asp-validation-for="bairro" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="logradouro"></label>
    <input readonly asp-for="logradouro" class="form-control">
    <span asp-validation-for="logradouro" class="text-danger"></span>
</div>


<div class="form-group">
    <label asp-for="complemento"></label>
    <input asp-for="complemento" class="form-control">
    <span asp-validation-for="complemento" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="numero"></label>
    <input asp-for="numero" class="form-control">
    <span asp-validation-for="numero" class="text-danger"></span>
</div>



<input type="hidden" asp-for="latitude" class="form-control">
<input type="hidden" asp-for="longitude" class="form-control">



<div id="map" style="width: 800px; height: 500px"></div>
